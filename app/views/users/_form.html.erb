<%= form_for(@user) do |f| %>
  <%= render 'shared/errors', object: @user %>
  <fieldset>
    <ul>
      <li class='required'>
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class='required'>
        <%= f.label :email %>
        <%= f.email_field :email, size: 40 %>
      </li>
      <li class='required'>
        <%= f.label :password %>
        <%= f.password_field :password, size: 40 %>
      </li>
      <li class='required'>
        <%= f.label :password_confirmation, 'Confirm Password' %>
        <%= f.password_field :password_confirmation, size: 40 %>
      </li>
    </ul>
    <p>
      <% if @user.new_record? %>
        <%= f.submit 'Create Account', class: 'button small round' %>
      <% else %>
        <%= f.submit 'Update Account', class: 'button small round' %>
      <% end %>
    </p>
  </fieldset>
<% end %>
