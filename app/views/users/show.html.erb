<article id='user'>
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </header>
  <footer>
    <nav>
      <%= link_to 'Edit', edit_user_path(@user), class: 'button small' %>
      <%= link_to 'Delete Account', @user,  method: :delete,
                                            data: { confirm: 'Are you sure?' },
                                            class: 'button small alert' %>
    </nav>
  </footer>
</article>
