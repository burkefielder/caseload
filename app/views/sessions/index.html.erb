<header id='content-header'>
  <h1>Session notes for <%= link_to(@student.fullname, @student) %></h1>
</header>
<ol>
  <% @session.each do |session| %>
    <li>
      <p>
        <%= link_to session.date, student_session_path(@student, session) %>
      </p>
      <p>
        <%= session.minutes %> minutes
      </p>
      <p>
        Type of therapy: <br/>
        <%= session.therapy %>
      </p>
      <p>
        <%= session.notes %>
      </p>
      <p>
        <%= link_to 'Edit', edit_student_session_path(@student, session) %>
      </p>
    </li>
    <% end %>
</ol>
<%= link_to 'Write Note', new_student_session_path(@student) %>
