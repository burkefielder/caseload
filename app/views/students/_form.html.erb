<%= form_for(@student) do |f| %>
  <p>
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name, autofocus: true %><br/>
  </p>
  <p>
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %><br/>
  </p>
  <p>
    <%= f.label :age, 'Date of birth' %><br/>
    <%= f.number_field :age %>
  </p>
  <p>
    <%= f.label :grade %><br/>
    <%= f.number_field :grade %>
  </p>
  <p>
    <%= f.check_box :triennial %>
    <%= label_tag(:triennial, 'Triennial due this year?') %><br/>
  </p>
  <p>
    <%= f.label :iep_date %><br/>
    <%= f.date_field :iep_date %><br/>
  </p>
  <p>
    <%= label_tag(:min_hours, 'IEP Minutes') %><br/>
    <%= f.number_field :min_hours %>
  </p>
  <p>
    <%= f.label :diagnosis %><br/>
    <%= f.text_area :diagnosis %>
  </p>
  <p>
    <%= f.check_box :dismissed %>
    <%= label_tag(:dismissed, 'Dismissed?') %><br/>
  </p>
  <p>
    <%= f.submit %>
    <%= button_to 'Cancel', students_path, method: 'get' %>
  </p>
<% end %>
