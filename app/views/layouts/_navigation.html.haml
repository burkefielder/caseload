/ Navbar
%link{:href => "http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css", :rel => "stylesheet"}
  %nav.menu
    %h1.name
      %i.fi-clipboard-notes
      CASELOAD
    %ul.inline-list
      %li
        = nav_link 'All Students', root_path
      %li
        = nav_link 'Add Student', new_student_path
    %ul.inline-list.hide-for-small-only.account-action
      - if current_user
        = nav_link current_user.name, current_user
        = nav_link 'Account Settings', edit_user_path(current_user)
        = link_to 'Sign Out', s_session_path, method: :delete
      - else
        %li
          %a{"data-reveal-id" => "myModal", :href => "#"} Login
    %a.account.hide-for-medium-up{"data-reveal-id" => "myModal", :href => "#"}
      %i.fi-unlock
  / modal content
  #myModal.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "login or sign up", "data-reveal" => "", :role => "dialog"}
    .row
      .large-6.columns.auth-plain
        .signup-panel.left-solid
          %p.welcome Registered Users
          = form_tag(s_session_path) do
            .row.collapse
              .small-2.columns
                %span.prefix
                  %i.fi-torso-female
              .small-10.columns
                = text_field_tag :email, nil
            .row.collapse
              .small-2.columns
                %span.prefix
                  %i.fi-lock
              .small-10.columns
                = password_field_tag :password, nil
            = submit_tag 'Login', class: 'button'
      .large-6.columns.auth-plain
        .signup-panel.newusers
          %p.welcome New User?
          %p Please use this option to create a new account. As a registered user, you will have access to the students on your caseload.
          %br
            %a.button{:href => new_user_path} Sign Up
